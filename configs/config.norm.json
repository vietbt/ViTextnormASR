{
  "name": "textnorm",
  "dataset": {
    "folder": "./dataset",
    "norm_labels": ["B-CAP", "B-ALLCAP", "B-NUMB", "I-ALLCAP", "I-NUMB", "O"],
    "punc_labels": ["PERIOD", "COMMA", "QMARK", "EMARK", "COLON", "SCOLON", "DASH", "O"]
  },
  "block_size": 200,
  "logging": {
    "tensorboard": "logs"
  },
  "hyperparams": {
    "hidden_dim": 512,
    "learning_rate": 2e-5,
    "n_epochs": 100,
    "batch_size": 3,
    "device": "cuda"
  }
}
