{
  "name": "textnorm_1",
  "dataset": {
    "train": "./dataset/fold_1/train.txt",
    "test": "./dataset/fold_1/test.txt",
    "norm_labels": ["B-CAP", "B-ALLCAP", "B-NUMB", "I-ALLCAP", "I-NUMB", "O"],
    "punc_labels": ["PERIOD", "COMMA", "QMARK", "EMARK", "COLON", "SCOLON", "DASH", "O"]
  },
  "block_size": 100,
  "logging": {
    "tensorboard": "logs",
    "cookie": "cookie"
  },
  "hyperparams": {
    "hidden_dim": 512,
    "learning_rate": 2e-5,
    "n_epochs": 15,
    "batch_size": 16,
    "device": "cuda"
  }
}
